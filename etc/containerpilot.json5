{
  consul: "{{ if .CONSUL_AGENT }}localhost{{ else }}{{ if .CONSUL }}{{ .CONSUL }}{{ else }}consul{{ end }}{{ end }}:8500",
  logging: {
    level: "DEBUG",
    format: "text"
  },
  jobs: [
    {
      name: "preStart",
      exec: "python /usr/local/bin/manage.py"
    },
    {
      name: "preStop",
      exec: "python /usr/local/bin/manage.py pre_stop"
    },
    {{ if .CONSUL_AGENT }}
    {
      name: "consul-agent",
      exec: ["/usr/local/bin/consul", "agent",
                "-data-dir=/opt/consul/data",
                "-config-dir=/opt/consul/config",
                "-rejoin",
                "-retry-join", "{{ if .CONSUL }}{{ .CONSUL }}{{ else }}consul{{ end }}",
                "-retry-max", "10",
                "-retry-interval", "10s"],
       restarts: "unlimited"
    },
    {{ end }}
    {
      name: "{{ .REPLICASET | default "mongodb-replicaset" }}",
      port: 27017,
      exec: "mongod --replSet={{ .REPLICASET | default "mongodb-replicaset" }}",
      when: {
        source: "preStart",
        once: "exitSuccess"
      },
      health: {
        exec: "python /usr/local/bin/manage.py health",
        interval: 10,
        ttl: 25
      },
    },
    {
      name: "onchange-{{ .REPLICASET | default "mongodb-replicaset" }}",
      exec: "python /usr/local/bin/manage.py on_change",
      when: {
        source: "watch.{{ .REPLICASET | default "mongodb-replicaset" }}",
        each: "changed"
      }
    },
  ],
  watches: [
    {
      name: "{{ .REPLICASET | default "mongodb-replicaset" }}",
      interval: 2
    }
  ]
}
